<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Price Range -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Faixa de Preço"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary" />

    <TextView
        android:id="@+id/textViewPriceRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="R$ 0 - R$ 1000"
        android:textSize="14sp"
        android:textColor="@color/text_secondary" />

    <com.google.android.material.slider.RangeSlider
        android:id="@+id/rangeSliderPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:valueFrom="0"
        android:valueTo="1000"
        android:stepSize="10"
        app:values="@array/initial_slider_values" />

    <!-- Amenities -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Comodidades"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupAmenities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:singleLine="false">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipWifi"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wi-Fi" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipAr"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ar Condicionado" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipEstacionamento"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estacionamento" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipCafe"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Café" />

    </com.google.android.material.chip.ChipGroup>

</LinearLayout>
